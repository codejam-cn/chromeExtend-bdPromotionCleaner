{
    "manifest_version": 3,
    "name": "素颜知乎",
    "version": "1.0",
    "description": "素颜知乎",
    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "permissions": [
        "contextMenus",
		    "activeTab",
			"tabs" 
    ],	
	 "background": {
			"scripts": [ "background.js" ]
	},
	"content_scripts": [
     {
       "matches": ["https://www.zhihu.com/*","http://www.zhihu.com/*"],
       
       "js": ["zepto.min.js","front.js"]
     }
   ]
}
